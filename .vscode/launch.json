    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Test Sample Project",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Nacre/bin/Debug/net6.0/Nacre.dll",
            "args": [
                "--all-files",
                "true"
            ],
            "cwd": "${workspaceFolder}/samples/sample-project",
            "console": "integratedTerminal",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}